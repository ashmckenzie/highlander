<%- provide :head do -%>
   <%= stylesheet_link_tag :welcome -%>
<%- end -%>

<%- provide :pre_main do -%>
  <div class="hero">
    <div class="container">
      <h2>Hilander turns work into a game. Be awesome, earn badges and become the leader!</h2>
    </div>
  </div>
<%- end -%>

<ul class="ranking">

  <li class="running">Weekly running score</li>

  <%- @users.each_with_index do |user, i| -%>
    <li class="rankee">
      <%= render partial: 'shared/rankee', locals: { rankee: OpenStruct.new(user: user, index: i + 1) } %>
    </li>
  <%- end -%>

</ul>
